---
import Block from '../layouts/Block.astro';

const tecnologies = [
  {
    category: 'Frontend',
    tecnologies: [
      'HTML5',
      'CSS3',
      'Javascript',
      'Typescript',
      'SASS',
      'React',
      'NextJS',
      'Vue',
      'Angular',
      'Tailwind',
      'Material UI',
      'JQuery',
      'Bootstrap',
    ],
  },
  {
    category: 'Backend',
    tecnologies: [
      'NodeJS',
      'ExpressJS',
      'MongoDB',
      'Mongoose',
      'PostgreSQL',
      'MySQL',
      'NestJS',
      'PHP',
      'Codeigniter 4',
      'Laravel 9',
      'Python',
      'Flask',
      'Firebase',
    ],
  },
  {
    category: 'Herramientas/Otros',
    tecnologies: ['Git/Github', 'Docker', 'Postman', 'Figma', 'UX/UI', 'Jira', 'Scrum'],
  },
];
---

<Block title="TECNOLOGÃAS">
  <div class="tecnologies">
    {
      tecnologies.map((tecnology) => {
        return (
          <div class="category">
            <h3 class="name">{tecnology.category}</h3>
            <div class="tags">
              {tecnology.tecnologies.map((tecnology) => {
                return (
                  <div class="tag">
                    <p>{tecnology}</p>
                  </div>
                );
              })}
            </div>
          </div>
        );
      })
    }
  </div>
</Block>

<style>
  .tecnologies {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .category {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .category .name {
    font-size: 1.4rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .tags .tag {
    background-color: #5c627a;
    color: white;
    padding: 0.4rem 2rem;
    border-radius: 1rem;
  }
</style>
